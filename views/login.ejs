<%- include("partials/header") -%>

    <div class="container" id="change-form">    
        <div class="bg-white" id="form-container">
        <h1 align="center" class="mt-1">Login</h1>

       
        <form action="/login" method="post" class="mx-auto my-4">
            <div class="form-group">
                <label for="username">Username</label>
                <input type="text" id="username" class="form-control" name="username" placeholder="username" required>
            </div>
            
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" class="form-control" name="password" placeholder="password" required>
            </div>

            <button type="submit" class="btn btn-info btn-lg w-100" name="submit">Login</button>
            <p class="text-center py-1 pt-2">Don't have an account yet? <a href="/register" class="text-info">Sign Up!</a></p>
        </form>

        <a href="/campgrounds" class="d-flex justify-content-center text-info">Go Back</a>
        
    </div>
    </div>
    
    
<%- include("partials/footer") -%>